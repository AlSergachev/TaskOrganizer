<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_title_style" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/work_sans_bold</item>
        <item name="android:fontFamily">@font/work_sans_bold</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="text_style" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="text_title" parent="text_style">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="text_task_title" parent="text_style">
        <item name="android:textSize">@dimen/text_size_task_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_task_data" parent="text_style">
        <item name="android:textSize">@dimen/text_size_task_data</item>
    </style>


    <style name="button">
        <item name="android:layout_width">@dimen/size_button</item>
        <item name="android:layout_height">@dimen/size_button</item>
        <item name="android:layout_margin">@dimen/margin_button</item>
        <item name="android:elevation">5dp</item>
        <!--        <item name="android:layout_marginTop">@dimen/bottom_margin_vertical</item>-->
<!--        <item name="android:layout_marginBottom">@dimen/bottom_margin_vertical</item>-->
<!--        <item name="android:layout_marginStart">@dimen/bottom_margin_horizontal</item>-->
<!--        <item name="android:layout_marginEnd">@dimen/bottom_margin_horizontal</item>-->
        <item name="android:background">@drawable/shape_fragments_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/padding_in_button</item>
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textColor">@color/dark_blue</item>

    </style>

    <style name="radioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="radioButtonDetails" parent="radioButton">
        <item name="android:clickable">false</item>
        <item name="android:longClickable">false</item>
    </style>

    <style name="task">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>

    <style name="task_details" parent="task">
        <item name="android:longClickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="check_box_details">
        <item name="android:layout_width">@dimen/width_check_box</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">false</item>
        <item name="android:longClickable">false</item>
    </style>

</resources>